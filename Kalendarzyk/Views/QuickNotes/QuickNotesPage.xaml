<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Kalendarzyk.Models.EventModels"
             x:Class="Kalendarzyk.Views.QuickNotes.QuickNotesPage"
             Title="QuickNotesPage">

    <FlexLayout BindableLayout.ItemsSource="{Binding QuickNotesOC}" 
            Wrap="Wrap" 
            Direction="Row" 
            AlignItems="Start" 
            JustifyContent="Start"
            HorizontalOptions="Center">
        <BindableLayout.ItemTemplate>
            <DataTemplate x:DataType="models:IGeneralEventModel">
                    <StackLayout >
                        <Label 
                            Text="{Binding  Title}" 
                            Background="Red"
                            TextColor="AliceBlue" 
                            HorizontalOptions="Center" 
                            VerticalOptions="Center">
                        </Label>
                    </StackLayout>
            </DataTemplate>
        </BindableLayout.ItemTemplate>
    </FlexLayout>
</ContentPage>