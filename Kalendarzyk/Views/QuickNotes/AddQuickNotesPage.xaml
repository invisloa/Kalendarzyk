<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kalendarzyk.Views.QuickNotes.AddQuickNotesPage"
             xmlns:customControls="clr-namespace:Kalendarzyk.Views.CustomControls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="AddQuickNotesPage"
             x:Name="AddQuickNotesPageName"
             >
    <VerticalStackLayout>

        <!-- Entry for new type name -->
        <Entry             Margin="10"
                           Placeholder="...QUICK NOTE TITILE..." 
                           Text="{Binding QuickNoteTitle, Mode=TwoWay}" 
                           FontAttributes="Bold" FontSize="Body"
                           HorizontalTextAlignment="Center" 
                           BackgroundColor="{DynamicResource MainTextboxesBackgroundColor}" 
                           TextColor="{DynamicResource MainTextColor}" 
                           VerticalOptions="Center" 
                           HorizontalOptions="Center"  />
        <Entry             Margin="10"
                           Placeholder="...QUICK NOTE DESCRIPTION..." 
                           Text="{Binding QuickNoteDescription, Mode=TwoWay}" 
                           FontAttributes="Bold" FontSize="Body"
                           HorizontalTextAlignment="Center" 
                           BackgroundColor="{DynamicResource MainTextboxesBackgroundColor}" 
                           TextColor="{DynamicResource MainTextColor}" 
                           VerticalOptions="Center" 
                           HorizontalOptions="Center" MinimumWidthRequest="200" />

        <customControls:SelectableButtonFlexLayoutCC ItemsSource="{Binding QuickNotesButtonsSelectors}"  AlignItems="Center" JustifyContent="Center" />

        <!--MicroTasks CC-->
        <customControls:MicroTasksListCC IsVisible="{Binding IsQuickNoteMicroTasksSelected}" />
        
        <!--VALUE CC-->
        <customControls:MeasurementSelectorCC IsVisible="{Binding IsQuickNoteMeasurementSelected}" />

        




        <Button  Style="{DynamicResource DangerButtonStyle}" WidthRequest="300" Text="DELETE QUICK NOTE  " IsVisible="{Binding IsEditQuickNote}" Command="{Binding DeleteAsyncSelectedMainEventTypeCommand}"/>
        <Button Margin="5" Text="{Binding SubmitQuickNoteButtonText}" FontAttributes="Bold" TextColor="{StaticResource MainTextColor}" Command="{Binding SubmitAsyncQuickNoteCommand}" HorizontalOptions="Center" BackgroundColor="{StaticResource MainButtonBackgroundColor}"/>

    </VerticalStackLayout>
</ContentPage>