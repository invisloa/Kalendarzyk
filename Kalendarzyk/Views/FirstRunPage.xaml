<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kalendarzyk.Views.FirstRunPage"
             xmlns:customControls="clr-namespace:Kalendarzyk.Views.CustomControls"
             Title="FirstRunPage">
    <VerticalStackLayout>
        <Label 
            Text="{Binding WelcomeText}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <!-- Manually added buttons with Grid layout -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Adjust column width as needed -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Frame HeightRequest="150" WidthRequest="150" BorderColor="Red" Margin="20" Scale="{Binding EnglishFlagScale}">
                <VerticalStackLayout Margin="-10">
                    <Image Source="flag_english.png" WidthRequest="100" HeightRequest="100" Margin="-10"/>
                    <Label Margin="0" Text="LANGUAGE" WidthRequest="100" HeightRequest="50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                </VerticalStackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding EngCommand}"/>
                </Frame.GestureRecognizers>
            </Frame>

            <Frame Grid.Column="1" HeightRequest="150" WidthRequest="150" BorderColor="Red" Margin="20"  Scale="{Binding PolishFlagScale}">
                <VerticalStackLayout Margin="-10">
                    <Image Source="flag_polish.png" WidthRequest="100" HeightRequest="100" Margin="-10"/>
                    <Label Margin="0" Text="JÄ˜ZYK" WidthRequest="100" HeightRequest="50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                </VerticalStackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding PLCommand}"/>
                </Frame.GestureRecognizers>
            </Frame>
        </Grid>
        <Button Style="{StaticResource MyCustomButtonStyle}" Text="{Binding NextButtonText}" HorizontalOptions="Center"  CornerRadius="20" Clicked="Button_Clicked" IsEnabled="{Binding IsNextButtonEnabled}"/>
    </VerticalStackLayout>
</ContentPage>



