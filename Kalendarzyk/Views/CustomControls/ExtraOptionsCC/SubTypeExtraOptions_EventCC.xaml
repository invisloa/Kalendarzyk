<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customControls="clr-namespace:Kalendarzyk.Views.CustomControls"
             x:Class="Kalendarzyk.Views.CustomControls.SubTypeExtraOptions_EventCC"
             >

    <StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="5" Spacing="5">
            <Button Text="VALUE"  BackgroundColor="{Binding ExtraOptionsHelperToChangeName.IsValueTypeColor}" BorderColor="Red" BorderWidth="1" IsVisible="{Binding SelectedEventType.IsValueType}"/>
            <Button Text="M-TASKS" BackgroundColor="{Binding ExtraOptionsHelperToChangeName.IsMicroTasksListTypeColor}"  BorderColor="Red" BorderWidth="1" IsVisible="{Binding SelectedEventType.IsMicroTaskType}"/>
        </StackLayout>

        <!--<customControls:DefaultEventTimespanCC IsVisible="{Binding ExtraOptionsHelperToChangeName.IsDefaultEventTimespanSelected}"/>-->
        <customControls:MeasurementSelectorCC IsVisible="{Binding ExtraOptionsHelperToChangeName.IsValueTypeSelected}"/>
        <customControls:MicroTasksListCC  IsVisible="{Binding ExtraOptionsHelperToChangeName.IsMicroTaskTypeSelected}"/>

    </StackLayout>
</ContentView>
