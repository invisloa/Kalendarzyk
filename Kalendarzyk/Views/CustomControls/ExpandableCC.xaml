<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kalendarzyk.Views.CustomControls.ExpandableCC"
             xmlns:local="clr-namespace:Kalendarzyk.Views.CustomControls"
             xmlns:converters="clr-namespace:Kalendarzyk.Helpers.Converters">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <VerticalStackLayout>
                <Label Text="Header" BackgroundColor="LightGray" />
                <ContentView Content="{TemplateBinding Content}" />
            </VerticalStackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>
    <VerticalStackLayout>
        <Label Text="Content 1" />
        <Label Text="Content 2" />
        <Label Text="Content 3" />
    </VerticalStackLayout>
</ContentView>